{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Deno",
      "type": "pwa-node",
      "request": "launch",
      "program": "${workspaceFolder}/src/index.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect-brk=127.0.0.1:9229",
        "--unstable",
        "--importmap=./importmap.json",
        "--allow-all"
      ],
      "attachSimplePort": 9229,
      "outputCapture": "std",
      "console": "internalConsole"
      //"preLaunchTask": "deno purge"
    }
  ]
}